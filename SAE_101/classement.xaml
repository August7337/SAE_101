<Window x:Class="SAE_101.Classement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_101"
        mc:Ignorable="d"
        Title="classement" Height="450" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="CLASSEMENT" HorizontalAlignment="Center" Margin="0,0,0,30" FontSize="24" />
            <TextBox x:Name="txtNom" />
            <TextBox x:Name="txtTemps" />
            <Button Content="Ajouter Utilisateur" Click="Button_AddUser_Click"/>
            <Button Content="Récupérer Utilisateurs" Click="Button_GetUsers_Click" />
            <ListBox x:Name="lstUsers" />
            <Button Content="OK" Click="btn_Click_Ok" />
        </StackPanel>
    </Grid>
</Window>
