<Window
    x:Class="SAE_101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label
                x:Name="lab_argent"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="0 $" />

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                <Label
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Pierre : " />

                <Label
                    x:Name="lab_pierre"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="0"/>
            </StackPanel>
            <Button
                x:Name="buttonVentePierre"
                Background="#FFE8E8E8"
                Click="button_Click_Vente_Pierre"
                Content="Vente Pierre 0.5 €" />
            <Button
                x:Name="btnClassement"
                Background="#FFE8E8E8"
                Click="btn_Click_Classement"
                Content="Classement" />
        </StackPanel>

        <Button
            x:Name="mairie"
            Margin="131,172,503,172"
            Click="button_Click_Mairie"
            Content="Mairie" Cursor="Hand" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>

        <Button
            x:Name="buttonAchatMairie"
            Margin="106,280,527,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Mairie"
            Content="Ammelioration 10 $" Cursor="Hand" />
        <Button
            x:Name="buttonAchatMairieMax"
            Margin="278,280,477,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Mairie_Max"
            Content="Max" Cursor="Hand" />
        <Label Content="Niveau 1" x:Name="labNiveauMairie" Margin="200,333,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button
            BorderThickness="0"
            x:Name="carriere"
            Margin="436,89,182,172"
            Click="button_Click_Carriere"
            Content="" Cursor="Hand" >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/carriere.png"/>
            </Button.Background>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border>
                                    <Image Source="/carriere.png" Stretch="Uniform"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button
            x:Name="buttonAchatCarriere"
            Margin="423,280,210,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Carriere"
            Content="Ammelioration 10 $" Cursor="Hand" />
        <Button
            x:Name="buttonAchatCarriereMax"
            Margin="595,280,160,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Carriere_Max"
            Content="Max" Cursor="Hand" />

        <Button Content="Marché" Canvas.Left="716" Canvas.Top="26" Click="Button_Click" Width="50" Height="25" HorizontalAlignment="Center" Margin="0,-370,0,0"/>

        <Label Content="Niveau 1" x:Name="labNiveauCarriere" Margin="506,333,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Canvas x:Name="canvasAnimation" />
    </Grid>
</Window>
