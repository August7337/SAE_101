<Window
    x:Class="SAE_101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="mairie"
            Margin="131,172,503,172"
            Click="button_Click_Mairie"
            Content="Mairie" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        
        <Button
            x:Name="buttonAchatMairie"
            Margin="106,280,527,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Mairie"
            Content="Ammelioration 10 $" />
        <Button
            x:Name="buttonAchatMairieMax"
            Margin="278,280,477,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Mairie_Max"
            Content="Max" />

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label
                x:Name="lab_argent"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="0 $" />

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                <Label
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Pierre : " />

                <Label
                    x:Name="lab_pierre"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="0"/>
            </StackPanel>
            <Button
                x:Name="buttonVentePierre"
                Background="#FFE8E8E8"
                Click="button_Click_Vente_Pierre"
                Content="Vente Pierre 0.5 €" />
        </StackPanel>

            

        



        <Button
            BorderThickness="0"
            x:Name="carriere"
            Margin="436,89,182,172"
            Click="button_Click_Carriere"
            Content="" >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/carriere.png"/>
            </Button.Background>
        </Button>
        <Button
            x:Name="buttonAchatCarriere"
            Margin="423,280,210,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Carriere"
            Content="Ammelioration 10 $" />
        <Button
            x:Name="buttonAchatCarriereMax"
            Margin="595,280,160,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Carriere_Max"
            Content="Max" />

    </Grid>
</Window>
