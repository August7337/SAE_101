    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="mairie"
            Margin="131,172,503,172"
            Background="#FF7F7F7F"
            Click="button_Click_Mairie"
            Content="Mairie" />
        <Button
            x:Name="buttonAchatMairie"
            Margin="106,280,527,110"
            Background="#FFE8E8E8"
