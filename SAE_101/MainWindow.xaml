            Margin="278,280,477,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Mairie_Max"
            Content="Max" />

        <Label
            x:Name="lab_argent"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="0 $" />


        <Button
            x:Name="carriere"
            Margin="448,172,186,172"
            Background="#FFE0DBAB"
            Click="button_Click_Carriere"
            Content="Carrière" />
        <Button
            x:Name="buttonAchatCarriere"
            Margin="423,280,210,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Carriere"
            Content="Ammelioration 10 $" />
        <Button
            x:Name="buttonAchatCarriereMax"
            Margin="595,280,160,110"
            Background="#FFE8E8E8"
            Click="button_Click_Achat_Carriere_Max"
            Content="Max" />

    </Grid>
</Window>
